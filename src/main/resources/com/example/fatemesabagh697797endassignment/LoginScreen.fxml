<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns:fx="http://javafx.com/fxml"
          xmlns="http://javafx.com/javafx"
          fx:controller="com.example.fatemesabagh697797endassignment.Controllers.LoginController"
          hgap="10" vgap="10"
          alignment="center"
          prefWidth="300" prefHeight="200"
        >
        <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES"/>
                <ColumnConstraints hgrow="SOMETIMES"/>
        </columnConstraints>

        <rowConstraints>
                <RowConstraints vgrow="SOMETIMES" />
                <RowConstraints vgrow="SOMETIMES" />
                <RowConstraints vgrow="SOMETIMES" />
                <RowConstraints vgrow="SOMETIMES" />
        </rowConstraints>

        <children>
                <Label text="Login" styleClass="loginlbl" GridPane.columnSpan="2" style="-fx-font-size: 24px;" /> <!-- Made the title bigger -->

                <Label text="Username:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="usernameInput" promptText="Username" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Password:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <PasswordField fx:id="passwordInput" promptText="Password" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Button fx:id="loginButton" text="Login" onAction="#handleLoginButtonAction" style="-fx-background-color: red; -fx-text-fill: white;" GridPane.rowIndex="3" GridPane.columnSpan="2" alignment="CENTER" />
        </children>

</GridPane>